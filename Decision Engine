<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trading Decision Engine</title>
    
    <!-- Load React and ReactDOM -->
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    
    <!-- Load Babel for JSX -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <style>
        body { background-color: #0f172a; color: #e2e8f0; }
        /* Custom Scrollbar */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #1e293b; }
        ::-webkit-scrollbar-thumb { background: #475569; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #64748b; }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useRef } = React;

        // --- ICON COMPONENTS (SVG) ---
        // Manually defined to ensure standalone functionality without external icon libraries
        const IconBase = ({ d, className, ...props }) => (
            <svg 
                xmlns="http://www.w3.org/2000/svg" 
                width="24" height="24" viewBox="0 0 24 24" 
                fill="none" stroke="currentColor" strokeWidth="2" 
                strokeLinecap="round" strokeLinejoin="round" 
                className={className} 
                {...props}
            >
                {d}
            </svg>
        );

        const Activity = (p) => <IconBase {...p} d={<><polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/></>} />;
        const Settings = (p) => <IconBase {...p} d={<><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.47a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></>} />;
        const Save = (p) => <IconBase {...p} d={<><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/><polyline points="17 21 17 13 7 13 7 21"/><polyline points="7 3 7 8 15 8"/></>} />;
        const RotateCcw = (p) => <IconBase {...p} d={<><polyline points="1 4 1 10 7 10"/><path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"/></>} />;
        const Trash2 = (p) => <IconBase {...p} d={<><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/><line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/></>} />;
        const ShieldAlert = (p) => <IconBase {...p} d={<><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></>} />;
        const CheckCircle = (p) => <IconBase {...p} d={<><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></>} />;
        const XCircle = (p) => <IconBase {...p} d={<><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></>} />;
        const Layout = (p) => <IconBase {...p} d={<><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><line x1="3" y1="9" x2="21" y2="9"/><line x1="9" y1="21" x2="9" y2="9"/></>} />;
        const AlertTriangle = (p) => <IconBase {...p} d={<><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></>} />;
        const DollarSign = (p) => <IconBase {...p} d={<><line x1="12" y1="1" x2="12" y2="23"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></>} />;
        const Database = (p) => <IconBase {...p} d={<><ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/></>} />;
        const FileJson = (p) => <IconBase {...p} d={<><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><path d="M10 12a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1"/><path d="M14 18a1 1 0 0 1-1-1v-2a1 1 0 0 1 1-1"/></>} />;
        const Upload = (p) => <IconBase {...p} d={<><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></>} />;

        // --- DEFAULT DATA ---
        const DEFAULT_HARD_RULES = [
          { id: 'h1', label: 'SL Logic Valid (Beyond Liquidity)', isMet: false },
          { id: 'h2', label: 'RR â‰¥ 1:2 Target', isMet: false },
          { id: 'h3', label: 'News Safe (No High Impact)', isMet: false },
        ];

        const DEFAULT_MATRIX = [
          {
            id: 1,
            title: 'Technical Structure',
            criteria: [
              { id: 101, label: 'HTF Key Levels (S&R, OB, FVG)', weight: 8, isMet: false, note: 'Daily/H4 levels only' },
              { id: 102, label: 'Fibonacci (0.5-0.79) + Inducement', weight: 8, isMet: false, note: 'After liquidity sweep' },
              { id: 103, label: 'Retest Confirmation', weight: 8, isMet: false, note: 'Break -> Retest -> Reject' },
              { id: 104, label: 'Candlestick Quality', weight: 5, isMet: false, note: 'Engulfing, Pin, Displacement' },
              { id: 105, label: 'RSI Divergence', weight: 2, isMet: false, note: 'With structure only' },
              { id: 106, label: 'EMA 20/50 Trend Align', weight: 2, isMet: false, note: 'Dynamic S/R' },
              { id: 107, label: 'MACD / Volume / Bollinger', weight: 1, isMet: false, note: 'Minor confirmation' },
              { id: 108, label: 'Inter-Market Divergence (Gold/Silver)', weight: 1, isMet: false, note: 'Correlation check' },
            ]
          },
          {
            id: 2,
            title: 'Fundamentals & Context',
            criteria: [
              { id: 201, label: 'News & Macro', weight: 6, isMet: false, note: 'DXY, Yields, VIX context' },
              { id: 202, label: 'Market & Risk Sentiment', weight: 5, isMet: false, note: 'Risk-on vs Risk-off' },
              { id: 203, label: 'Currency Strength', weight: 5, isMet: false, note: 'Strong vs Weak pairing' },
              { id: 204, label: 'Seasonality & Volatility', weight: 4, isMet: false, note: 'Time/ATR tendency' },
              { id: 205, label: 'Session Timing', weight: 2, isMet: false, note: 'London/NY Volume' },
            ]
          },
          {
            id: 3,
            title: 'Risk & Process',
            criteria: [
              { id: 301, label: 'Risk Management Plan', weight: 6, isMet: false, note: '0.5-1% Risk, No Overleverage' },
              { id: 302, label: 'Psychology & Discipline', weight: 1, isMet: false, note: 'Emotionally neutral' },
              { id: 303, label: 'Journaling & Review', weight: 1, isMet: false, note: 'Setup recorded' },
            ]
          }
        ];

        // --- MAIN APP COMPONENT ---
        function App() {
          const STORAGE_KEY = 'trading_matrix_v1_standalone';
          
          const loadState = () => {
            try {
              const saved = localStorage.getItem(STORAGE_KEY);
              return saved ? JSON.parse(saved) : null;
            } catch (e) {
              console.error("Could not load state", e);
              return null;
            }
          };

          const savedData = loadState();

          // --- State ---
          const [hardRules, setHardRules] = useState(savedData?.hardRules || DEFAULT_HARD_RULES);
          const [matrix, setMatrix] = useState(savedData?.matrix || DEFAULT_MATRIX);
          const [accountBalance, setAccountBalance] = useState(savedData?.accountBalance || 10000);
          const [riskPercent, setRiskPercent] = useState(savedData?.riskPercent || 1.0);
          const [stopLoss, setStopLoss] = useState(savedData?.stopLoss || 20);
          const [pair, setPair] = useState(savedData?.pair || 'EURUSD');
          const [pipValue, setPipValue] = useState(savedData?.pipValue || 10); 

          // UI State
          const [isEditingMatrix, setIsEditingMatrix] = useState(false);
          const [showDataMenu, setShowDataMenu] = useState(false);
          const [toastMessage, setToastMessage] = useState({ type: '', text: '' });
          const fileInputRef = useRef(null);

          // --- Persistence Effect ---
          useEffect(() => {
            const dataToSave = {
              hardRules,
              matrix,
              accountBalance,
              riskPercent,
              stopLoss,
              pair,
              pipValue
            };
            localStorage.setItem(STORAGE_KEY, JSON.stringify(dataToSave));
          }, [hardRules, matrix, accountBalance, riskPercent, stopLoss, pair, pipValue]);

          // --- File Handlers ---
          const showStatus = (type, text) => {
            setToastMessage({ type, text });
            setTimeout(() => setToastMessage({ type: '', text: '' }), 3000);
          };

          const handleDownloadBackup = () => {
            const data = {
              hardRules,
              matrix,
              accountBalance,
              riskPercent,
              stopLoss,
              pair,
              pipValue,
              exportedAt: new Date().toISOString()
            };
            const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = `trading_matrix_backup_${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            showStatus('success', 'Backup downloaded successfully.');
          };

          const handleFileUpload = (e) => {
            const file = e.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = (event) => {
              try {
                const data = JSON.parse(event.target.result);
                if (data.matrix && data.hardRules) {
                  setMatrix(data.matrix);
                  setHardRules(data.hardRules);
                  if (data.accountBalance) setAccountBalance(data.accountBalance);
                  if (data.riskPercent) setRiskPercent(data.riskPercent);
                  if (data.stopLoss) setStopLoss(data.stopLoss);
                  if (data.pair) setPair(data.pair);
                  if (data.pipValue) setPipValue(data.pipValue);
                  showStatus('success', 'Configuration restored from file.');
                } else {
                  showStatus('error', 'Invalid file format.');
                }
              } catch (err) {
                showStatus('error', 'Failed to parse file.');
              }
            };
            reader.readAsText(file);
            e.target.value = null; // reset
          };

          // --- Derived Logic ---
          const totalPossibleScore = matrix.reduce((acc, area) => 
            acc + area.criteria.reduce((cAcc, c) => cAcc + c.weight, 0), 0);
          
          const currentScore = matrix.reduce((acc, area) => 
            acc + area.criteria.reduce((cAcc, c) => cAcc + (c.isMet ? c.weight : 0), 0), 0);

          const riskAmount = (accountBalance * (riskPercent / 100));
          const positionSizeLots = stopLoss > 0 ? (riskAmount / (stopLoss * pipValue)) : 0;

          const allHardRulesMet = hardRules.every(r => r.isMet);

          const getVerdict = () => {
            if (!allHardRulesMet) {
              return { 
                decision: 'DO NOT TAKE TRADE', 
                subtext: 'Hard Risk Rules Failed', 
                color: 'text-red-500', 
                bg: 'bg-red-500',
                confidence: 'Zero' 
              };
            }
            if (currentScore >= 42) {
              return { 
                decision: 'TAKE TRADE', 
                subtext: 'High Probability Setup', 
                color: 'text-green-400', 
                bg: 'bg-green-500',
                confidence: 'High' 
              };
            }
            if (currentScore >= 30) {
              return { 
                decision: 'CAUTION', 
                subtext: 'Take only if A+ Context', 
                color: 'text-yellow-400', 
                bg: 'bg-yellow-500',
                confidence: 'Medium' 
              };
            }
            return { 
              decision: 'DO NOT TAKE TRADE', 
              subtext: 'Score too low', 
              color: 'text-red-500', 
              bg: 'bg-red-500',
              confidence: 'Low' 
            };
          };

          const verdict = getVerdict();

          // --- Handlers ---
          const toggleHardRule = (id) => {
            setHardRules(hardRules.map(r => r.id === id ? { ...r, isMet: !r.isMet } : r));
          };

          const toggleCriteria = (areaId, criteriaId) => {
            setMatrix(matrix.map(area => {
              if (area.id !== areaId) return area;
              return {
                ...area,
                criteria: area.criteria.map(c => c.id === criteriaId ? { ...c, isMet: !c.isMet } : c)
              };
            }));
          };

          const updateCriteriaLabel = (areaId, criteriaId, newLabel) => {
            setMatrix(matrix.map(area => {
              if (area.id !== areaId) return area;
              return {
                ...area,
                criteria: area.criteria.map(c => c.id === criteriaId ? { ...c, label: newLabel } : c)
              };
            }));
          };

          const updateCriteriaWeight = (areaId, criteriaId, newWeight) => {
            setMatrix(matrix.map(area => {
              if (area.id !== areaId) return area;
              return {
                ...area,
                criteria: area.criteria.map(c => c.id === criteriaId ? { ...c, weight: Number(newWeight) } : c)
              };
            }));
          };
          
          const resetChecklist = () => {
            setMatrix(matrix.map(area => ({
              ...area,
              criteria: area.criteria.map(c => ({ ...c, isMet: false }))
            })));
            setHardRules(hardRules.map(r => ({ ...r, isMet: false })));
          };

          const factoryReset = () => {
            if(confirm("Are you sure? This will wipe all your custom weights and labels.")){
               setMatrix(DEFAULT_MATRIX);
               setHardRules(DEFAULT_HARD_RULES);
               setAccountBalance(10000);
               localStorage.removeItem(STORAGE_KEY);
            }
          };

          // --- Render Helpers ---
          const CircularProgress = () => {
            const percentage = totalPossibleScore > 0 ? (currentScore / totalPossibleScore) * 100 : 0;
            const radius = 35;
            const circumference = 2 * Math.PI * radius;
            const offset = circumference - (percentage / 100) * circumference;
            
            return (
              <div className="relative flex items-center justify-center">
                <svg className="transform -rotate-90 w-24 h-24">
                  <circle className="text-slate-700" strokeWidth="8" stroke="currentColor" fill="transparent" r={radius} cx="48" cy="48" />
                  <circle 
                    className={`${verdict.color} transition-all duration-500 ease-out`} 
                    strokeWidth="8" 
                    strokeDasharray={circumference} 
                    strokeDashoffset={offset} 
                    strokeLinecap="round" 
                    stroke="currentColor" 
                    fill="transparent" 
                    r={radius} 
                    cx="48" 
                    cy="48" 
                  />
                </svg>
                <div className="absolute text-xl font-bold text-white">{currentScore} <span className="text-xs text-slate-400">/ {totalPossibleScore}</span></div>
              </div>
            );
          };

          return (
            <div className="min-h-screen bg-slate-950 text-slate-200 font-sans p-4 md:p-8">
              <div className="max-w-6xl mx-auto space-y-8">
                
                {/* Header */}
                <header className="flex flex-col md:flex-row justify-between items-center bg-slate-900 p-6 rounded-2xl shadow-xl border border-slate-800 relative">
                  <div className="flex items-center space-x-3 mb-4 md:mb-0">
                    <div className="bg-indigo-600 p-2 rounded-lg shadow-lg shadow-indigo-500/20">
                      <Activity className="w-6 h-6 text-white" />
                    </div>
                    <div>
                      <h1 className="text-2xl font-bold text-white tracking-tight">
                        Decision Engine
                      </h1>
                      <p className="text-slate-400 text-sm font-medium">Standalone App</p>
                    </div>
                  </div>

                  <div className="flex items-center space-x-3">
                     <div className="relative">
                        <button 
                          onClick={() => setShowDataMenu(!showDataMenu)}
                          className={`flex items-center space-x-2 px-4 py-2 rounded-lg text-sm font-medium transition-colors ${showDataMenu ? 'bg-indigo-600 text-white' : 'bg-slate-800 text-slate-300 hover:bg-slate-700'}`}
                        >
                          <Database className="w-4 h-4" />
                          <span>Data</span>
                        </button>
                        
                        {showDataMenu && (
                          <div className="absolute top-full right-0 mt-2 w-64 bg-slate-800 border border-slate-700 rounded-xl shadow-2xl z-50 p-2 space-y-2">
                             <div className="text-xs font-bold text-slate-500 px-2 py-1 uppercase tracking-wider">Local Backup</div>
                             
                             <button onClick={handleDownloadBackup} className="w-full flex items-center space-x-3 px-3 py-2 rounded-lg hover:bg-slate-700 text-slate-300 text-sm">
                               <FileJson className="w-4 h-4 text-emerald-400" />
                               <span>Export to JSON</span>
                             </button>
                             <button onClick={() => fileInputRef.current?.click()} className="w-full flex items-center space-x-3 px-3 py-2 rounded-lg hover:bg-slate-700 text-slate-300 text-sm">
                               <Upload className="w-4 h-4 text-emerald-400" />
                               <span>Import from JSON</span>
                             </button>
                             <input type="file" ref={fileInputRef} onChange={handleFileUpload} className="hidden" accept=".json" />
                          </div>
                        )}
                     </div>

                     <button 
                      onClick={() => setIsEditingMatrix(!isEditingMatrix)}
                      className={`flex items-center space-x-2 px-4 py-2 rounded-lg text-sm font-medium transition-colors ${isEditingMatrix ? 'bg-indigo-600 text-white' : 'bg-slate-800 text-slate-300 hover:bg-slate-700'}`}
                    >
                      {isEditingMatrix ? <Save className="w-4 h-4" /> : <Settings className="w-4 h-4" />}
                      <span>{isEditingMatrix ? 'Done' : 'Edit'}</span>
                    </button>
                    <button 
                      onClick={resetChecklist}
                      className="flex items-center space-x-2 px-4 py-2 rounded-lg bg-slate-800 text-slate-300 hover:bg-slate-700 hover:text-white transition-colors text-sm font-medium"
                    >
                      <RotateCcw className="w-4 h-4" />
                      <span className="hidden md:inline">Reset</span>
                    </button>
                     {isEditingMatrix && (
                        <button 
                          onClick={factoryReset}
                          className="flex items-center space-x-2 px-4 py-2 rounded-lg bg-red-900/30 text-red-400 hover:bg-red-900/50 hover:text-red-200 transition-colors text-sm font-medium"
                          title="Reset to Factory Settings"
                        >
                          <Trash2 className="w-4 h-4" />
                        </button>
                     )}
                  </div>

                  {toastMessage.text && (
                    <div className={`absolute top-full left-1/2 transform -translate-x-1/2 mt-4 px-4 py-2 rounded-lg text-sm font-bold shadow-lg z-50 ${toastMessage.type === 'error' ? 'bg-red-500 text-white' : 'bg-emerald-500 text-white'} animate-bounce`}>
                      {toastMessage.text}
                    </div>
                  )}
                </header>

                <div className="bg-slate-900 rounded-2xl shadow-xl border border-slate-800 overflow-hidden">
                  <div className="bg-red-900/20 border-b border-red-500/20 p-4 flex items-center space-x-2">
                    <ShieldAlert className="w-5 h-5 text-red-400" />
                    <h2 className="text-red-100 font-bold uppercase tracking-wider text-sm">Pre-Flight Risk Check (Mandatory)</h2>
                  </div>
                  <div className="p-6 grid grid-cols-1 md:grid-cols-3 gap-4">
                    {hardRules.map(rule => (
                      <div 
                        key={rule.id}
                        onClick={() => toggleHardRule(rule.id)}
                        className={`cursor-pointer border rounded-xl p-4 flex items-center space-x-3 transition-all duration-200 ${rule.isMet ? 'bg-green-900/10 border-green-500/50' : 'bg-slate-800 border-slate-700 hover:border-slate-500'}`}
                      >
                        <div className={`w-6 h-6 rounded-full flex items-center justify-center border-2 ${rule.isMet ? 'bg-green-500 border-green-500' : 'border-slate-600'}`}>
                          {rule.isMet && <CheckCircle className="w-4 h-4 text-white" />}
                        </div>
                        <span className={`font-medium ${rule.isMet ? 'text-green-100' : 'text-slate-400'}`}>{rule.label}</span>
                      </div>
                    ))}
                  </div>
                </div>

                <div className="grid grid-cols-1 lg:grid-cols-12 gap-8">
                  <div className="lg:col-span-8 space-y-6">
                    <div className="space-y-6">
                      {matrix.map((area) => (
                        <div key={area.id} className="bg-slate-900 rounded-2xl shadow-lg border border-slate-800 overflow-hidden">
                          <div className="px-6 py-4 border-b border-slate-800 bg-slate-800/50 flex justify-between items-center">
                            <h2 className="text-md font-bold text-indigo-200 flex items-center">
                              <Layout className="w-4 h-4 text-indigo-500 mr-2" />
                              {area.title}
                            </h2>
                            <div className="text-xs text-slate-500 font-mono">
                              Weight: {area.criteria.reduce((a,c) => a + c.weight, 0)} pts
                            </div>
                          </div>
                          <div className="divide-y divide-slate-800/50">
                            {area.criteria.map((item) => (
                              <div 
                                key={item.id} 
                                className={`flex items-center justify-between px-6 py-4 transition-all hover:bg-slate-800/30 ${item.isMet ? 'bg-indigo-900/10' : ''}`}
                              >
                                <div className="flex items-center flex-1 space-x-4">
                                  {isEditingMatrix ? (
                                    <div className="flex-1 flex items-center space-x-2">
                                      <input
                                        type="text"
                                        value={item.label}
                                        onChange={(e) => updateCriteriaLabel(area.id, item.id, e.target.value)}
                                        className="flex-1 bg-slate-950 border border-slate-700 rounded px-2 py-1 text-sm focus:outline-none focus:border-indigo-500"
                                      />
                                      <input 
                                        type="number"
                                        value={item.weight}
                                        onChange={(e) => updateCriteriaWeight(area.id, item.id, e.target.value)}
                                        className="w-16 bg-slate-950 border border-slate-700 rounded px-2 py-1 text-sm text-center"
                                      />
                                    </div>
                                  ) : (
                                    <>
                                      <button 
                                        onClick={() => toggleCriteria(area.id, item.id)}
                                        className={`flex-shrink-0 w-6 h-6 rounded flex items-center justify-center border transition-all ${item.isMet ? 'bg-indigo-600 border-indigo-600 shadow-lg shadow-indigo-500/30' : 'border-slate-600 hover:border-indigo-400 bg-slate-800'}`}
                                      >
                                        {item.isMet && <CheckCircle className="w-4 h-4 text-white" />}
                                      </button>
                                      <div 
                                        className="flex-1 cursor-pointer"
                                        onClick={() => toggleCriteria(area.id, item.id)}
                                      >
                                        <div className={`font-medium text-sm ${item.isMet ? 'text-indigo-100' : 'text-slate-300'}`}>
                                          {item.label}
                                        </div>
                                        {item.note && (
                                          <div className="text-xs text-slate-500 mt-0.5">{item.note}</div>
                                        )}
                                      </div>
                                      <div className={`text-xs font-bold px-2 py-1 rounded ${item.isMet ? 'bg-indigo-500/20 text-indigo-300' : 'bg-slate-800 text-slate-600'}`}>
                                        +{item.weight}
                                      </div>
                                    </>
                                  )}
                                </div>
                              </div>
                            ))}
                          </div>
                        </div>
                      ))}
                    </div>

                    <div className="bg-slate-900 rounded-2xl shadow-lg border border-slate-800 p-6">
                      <h2 className="text-sm font-bold uppercase tracking-wider text-slate-500 mb-6 flex items-center">
                        <Settings className="w-4 h-4 mr-2" />
                        Execution Parameters
                      </h2>
                      <div className="grid grid-cols-2 md:grid-cols-4 gap-6">
                         <div>
                            <label className="text-[10px] font-bold text-slate-500 uppercase">Balance ($)</label>
                            <input 
                              type="number" 
                              value={accountBalance}
                              onChange={(e) => setAccountBalance(Number(e.target.value))}
                              className="w-full mt-2 bg-slate-950 border border-slate-700 rounded-lg py-2 px-3 text-slate-200 focus:border-indigo-500 outline-none text-sm"
                            />
                         </div>
                         <div>
                            <label className="text-[10px] font-bold text-slate-500 uppercase">Risk %</label>
                            <input 
                              type="number" 
                              step="0.1"
                              value={riskPercent}
                              onChange={(e) => setRiskPercent(Number(e.target.value))}
                              className="w-full mt-2 bg-slate-950 border border-slate-700 rounded-lg py-2 px-3 text-slate-200 focus:border-indigo-500 outline-none text-sm"
                            />
                         </div>
                         <div>
                            <label className="text-[10px] font-bold text-slate-500 uppercase">Stop Loss</label>
                            <input 
                              type="number" 
                              value={stopLoss}
                              onChange={(e) => setStopLoss(Number(e.target.value))}
                              className="w-full mt-2 bg-slate-950 border border-slate-700 rounded-lg py-2 px-3 text-slate-200 focus:border-indigo-500 outline-none text-sm"
                            />
                         </div>
                         <div>
                            <label className="text-[10px] font-bold text-slate-500 uppercase">Pip Value</label>
                            <input 
                              type="number" 
                              value={pipValue}
                              onChange={(e) => setPipValue(Number(e.target.value))}
                              className="w-full mt-2 bg-slate-950 border border-slate-700 rounded-lg py-2 px-3 text-slate-200 focus:border-indigo-500 outline-none text-sm"
                            />
                         </div>
                      </div>
                    </div>
                  </div>

                  <div className="lg:col-span-4 space-y-6">
                     <div className="lg:sticky lg:top-8 space-y-6">
                        <div className={`rounded-2xl shadow-xl border overflow-hidden transition-colors duration-300 ${allHardRulesMet ? 'bg-slate-900 border-slate-800' : 'bg-red-950/20 border-red-900/50'}`}>
                          <div className="p-8 flex flex-col items-center text-center">
                            {!allHardRulesMet && (
                              <div className="mb-6 bg-red-500/10 text-red-400 px-4 py-2 rounded-full text-xs font-bold uppercase tracking-wider flex items-center animate-pulse">
                                <AlertTriangle className="w-4 h-4 mr-2" />
                                Gatekeepers Failed
                              </div>
                            )}
                            <CircularProgress />
                            <div className="mt-6 space-y-1">
                              <div className={`text-3xl font-black uppercase ${verdict.color}`}>
                                {verdict.decision}
                              </div>
                              <div className="text-slate-400 text-sm font-medium">
                                {verdict.subtext}
                              </div>
                            </div>
                          </div>
                          <div className="border-t border-slate-800 bg-slate-950/50 p-4">
                            <div className="space-y-3 text-sm">
                              <div className="flex justify-between items-center">
                                 <span className="text-slate-500">Confidence</span>
                                 <span className={`font-bold ${verdict.color}`}>{verdict.confidence}</span>
                              </div>
                              <div className="flex justify-between items-center">
                                 <span className="text-slate-500">Risk Check</span>
                                 <span className={`font-bold ${allHardRulesMet ? 'text-green-500' : 'text-red-500'}`}>
                                   {allHardRulesMet ? 'PASSED' : 'FAILED'}
                                 </span>
                              </div>
                            </div>
                          </div>
                        </div>

                        <div className="bg-slate-900 rounded-2xl shadow-lg border border-slate-800 p-6">
                           <div className="flex items-center mb-6">
                              <div className="p-2 bg-emerald-500/10 rounded-lg mr-3">
                                <DollarSign className="w-5 h-5 text-emerald-500" />
                              </div>
                              <div>
                                <h3 className="text-sm font-bold text-slate-200 uppercase tracking-wider">Position Size</h3>
                                <p className="text-xs text-slate-500">Based on SL & Risk %</p>
                              </div>
                           </div>
                           <div className="space-y-4">
                              <div className="flex justify-between items-baseline">
                                <span className="text-slate-400 text-sm">Risk Amount</span>
                                <span className="text-lg font-mono text-white">${riskAmount.toFixed(2)}</span>
                              </div>
                              <div className="h-px bg-slate-800 w-full"></div>
                              <div className="flex justify-between items-baseline">
                                <span className="text-slate-400 text-sm">Lot Size</span>
                                <div className="text-right">
                                  <span className="text-3xl font-mono font-bold text-emerald-400">{positionSizeLots.toFixed(2)}</span>
                                  <span className="text-[10px] text-slate-500 block uppercase">Standard Lots</span>
                                </div>
                              </div>
                           </div>
                           {!allHardRulesMet ? (
                             <div className="mt-6 bg-red-500 text-white text-center py-3 rounded-xl text-sm font-bold shadow-lg shadow-red-500/20">
                               STOP. DO NOT EXECUTE.
                             </div>
                           ) : verdict.decision === 'TAKE TRADE' ? (
                             <button className="mt-6 w-full bg-emerald-500 hover:bg-emerald-600 text-white py-3 rounded-xl text-sm font-bold shadow-lg shadow-emerald-500/20 transition-all transform hover:scale-[1.02]">
                               EXECUTE TRADE
                             </button>
                           ) : (
                             <div className="mt-6 bg-slate-800 text-slate-500 text-center py-3 rounded-xl text-sm font-bold border border-slate-700">
                               WAITING FOR SETUP...
                             </div>
                           )}
                        </div>
                     </div>
                  </div>
                </div>
              </div>
            </div>
          );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
